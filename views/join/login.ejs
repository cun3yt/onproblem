<% layout('layouts/_join_layout') -%>
<div class="p_join__form">
    <a href="/">
        <img src="images/logo-white.svg" class="p_join__logo" alt="Onproblem logo" />
    </a>
    <% if(message.length > 0) { %>
        <p>
            <%= message %>
        </p>
    <% } %>

    <form class="ui large form" action="/login" method="post">
        <div class="ui stacked segment">
            <%- form.toHTML() %>
            <a class="p_join__forgot-pass" href="#">Forgotten password?</a>
            <div>
                <input type="submit" value="Log In" class="ui fluid primary button" />
            </div>
            <div class="ui horizontal divider">
                Or
            </div>
            <div class="ui two buttons">
                <button class="ui facebook button">
                    <i class="facebook icon"></i>
                    Facebook
                </button>
                <button class="ui twitter button">
                    <i class="twitter icon"></i>
                    Twitter
                </button>
            </div>
        </div>
    </form>

    <div class="ui stacked segment dont-have-account-question">
        Don't have an account? <a href="/signup">Register now</a>
    </div>
</div>

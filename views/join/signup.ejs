<% layout('layouts/_join_layout') -%>

<div class="p_join__form">
    <a href="/">
        <img src="images/logo-white.svg" class="p_join__logo" alt="Onproblem logo" />
    </a>
    <% if(message.length > 0) { %>
        <p>
            <%= message %>
        </p>
    <% } %>

    <form class="ui large form" action="/signup" method="post">
        <div class="ui stacked segment">
            <%- form.toHTML() %>
            <div>
                <input type="submit" value="Sign Up" class="ui fluid primary button" />
            </div>
            <div class="ui horizontal divider">
                Or
            </div>
            <div class="ui two buttons">
                <button class="ui facebook button">
                    <i class="facebook icon"></i>
                    Facebook
                </button>
                <button class="ui twitter button">
                    <i class="twitter icon"></i>
                    Twitter
                </button>
            </div>
        </div>
    </form>

    <div class="ui stacked segment already-signed-up-question">
        Already Signed Up? <a href="/login">Login</a>
    </div>
</div>

<script>
  (function(dom) {
      var username_fields = dom.querySelectorAll('#id_email');
      if(username_fields.length > 0) {
        username_fields[0].focus();
      }
  })(document);
</script>